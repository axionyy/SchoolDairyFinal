                android:text="1"
                android:padding="5dp" />
            <TextView
                android:layout_column="1"
                android:text="Алгебра"
                android:padding="5dp" />
            <TextView
                android:text="4"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="2"
                android:padding="5dp" />
            <TextView
                android:layout_column="1"
                android:text="Английский язык"
                android:padding="5dp" />
            <TextView
                android:text="5"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="3"
                android:padding="5dp" />
            <TextView
                android:layout_column="1"
                android:text="Биология"
                android:padding="5dp" />
            <TextView
                android:text="3"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:padding="5dp"
                android:text="4" />
            <TextView
                android:padding="5dp"
                android:text="География" />
            <TextView
                android:text="4"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="5"
                android:padding="5dp" />
            <TextView
                android:text="Геометрия"
                android:padding="5dp" />
            <TextView
                android:text="3"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="6"
                android:padding="5dp" />
            <TextView
                android:text="История"
                android:padding="5dp" />
            <TextView
                android:text="3"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="7"
                android:padding="5dp" />
            <TextView
                android:text="ИЗО"
                android:padding="5dp" />
            <TextView
                android:text="4"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="8"
                android:padding="5dp" />
            <TextView
                android:text="Литература"
                android:padding="5dp" />
            <TextView
                android:text="4"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="9"
                android:padding="5dp" />
            <TextView
                android:text="Обществознание"
                android:padding="5dp" />
            <TextView
                android:text="4"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="10"
                android:padding="5dp" />
            <TextView
                android:text="Русский язык"
                android:padding="5dp" />
            <TextView
                android:text="4"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="11"
                android:padding="5dp" />
            <TextView
                android:text="Технология"
                android:padding="5dp" />
            <TextView
                android:text="5"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="12"
                android:padding="5dp" />
            <TextView
                android:text="Физика"
                android:padding="5dp" />
            <TextView
                android:text="4"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="13"
                android:padding="5dp" />
            <TextView
                android:text="Физ-ра"
                android:padding="5dp" />
            <TextView
                android:text="5"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="14"
                android:padding="5dp" />
            <TextView
                android:text="Информатика"
                android:padding="5dp" />
            <TextView
                android:text="4"
                android:gravity="right"
                android:padding="5dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="15"
                android:padding="5dp" />
            <TextView
                android:text="Музыка"
                android:padding="5dp" />
            <TextView
